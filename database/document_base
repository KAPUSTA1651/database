Это мой проект по созданию своей базы даанных
для замены таких как:  SQLite, PostgreSQL, MySQL





from my_database_lib.db import Database

# Создание базы данных и таблицы
db = Database('example.db')

# Определяем структуру таблицы
columns = {
    'id': 'INTEGER PRIMARY KEY AUTOINCREMENT',
    'name': 'TEXT',
    'age': 'INTEGER'
}

# Создаем таблицу
db.create_table('users', columns)

# Вставка данных
db.insert('users', (None, 'Alice', 30))
db.insert('users', (None, 'Bob', 25))

# Получение и вывод всех данных
users = db.fetch_all('users')
print(users)

# Обновление данных
db.update('users', {'age': 31}, 'name = "Alice"')

# Удаление данных
db.delete('users', 'name = "Bob"')

# Закрытие соединения
db.close()